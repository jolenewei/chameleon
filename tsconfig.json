{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"]
    },
    "types": ["chrome", "node", "vite/client"]
  },
  "include": ["src", "public/contentScript.js"]
}
